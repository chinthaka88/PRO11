@model ExamWeb.Models.ChoiceViewModels.ChoiceVM

@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("CreateChoice", "QuestionManager"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div></div>
        <div>@Html.HiddenFor(model => model.QuestionID)</div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.ChoiceDescription)
            @Html.TextAreaFor(model => model.ChoiceDescription, new { @class = "form-control", @placeholder = "Enter Question Description" })
            @Html.ValidationMessageFor(model => model.ChoiceDescription)

        </div>
        <input type="submit" value="Create" class="btn btn-default" />

    </div>
}

