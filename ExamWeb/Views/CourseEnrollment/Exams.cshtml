@model IEnumerable<ExamWeb.Models.ExamViewModels.ExamVM>

@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
    @RenderPage("~/Views/Shared/_SideMenuUser.cshtml")
}

<h2>Exams</h2>

<table class="table table-bordered table-striped table-hover table-heading table-datatable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CutOffMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CutOffMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td> 
                @Html.ActionLink("Strat Exam", "StratExam", new { id = item.ID })
            </td>
        </tr>
    }

</table>
